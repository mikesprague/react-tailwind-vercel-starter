{
  "name": "react-tailwindcss-vercel-starter",
  "version": "0.1.0",
  "description": "Template for a barebones Vercel hosted React/Tailwind CSS PWA with an API endpoint powered by a serverless function",
  "private": true,
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite serve --port $PORT",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=development vercel dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/react-tailwindcss-vercel-starter"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "",
  "license": "MIT",
  "dependencies": {
    "@tippyjs/react": "4.2.6",
    "axios": "1.3.3",
    "cross-env": "7.0.3",
    "dayjs": "1.11.7",
    "dotenv": "16.0.3",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.7.1",
    "swr": "2.0.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@babel/eslint-plugin": "7.19.1",
    "@babel/preset-env": "7.20.2",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@tailwindcss/typography": "0.5.9",
    "@vitejs/plugin-react-swc": "3.1.0",
    "autoprefixer": "10.4.13",
    "babel-plugin-add-react-displayname": "0.0.5",
    "cssnano": "5.1.14",
    "cz-git": "^1.4.1",
    "eslint": "8.34.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-compat": "4.1.1",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.7.1",
    "postcss": "8.4.21",
    "postcss-cli": "10.1.0",
    "prettier": "2.8.4",
    "prettier-eslint": "15.0.1",
    "prettier-stylelint": "0.4.2",
    "sass": "1.58.1",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-prettier": "2.0.0",
    "tailwindcss": "3.2.6",
    "vercel": "28.16.1",
    "vite": "4.1.1",
    "vite-plugin-html": "3.2.0",
    "vite-plugin-pwa": "0.14.4"
  },
  "babel": {
    "plugins": [
      "add-react-displayname"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "commonjs": true,
      "node": true
    },
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "extends": [
      "airbnb",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "jsx-a11y",
      "markdown",
      "prettier",
      "react",
      "react-hooks",
      "security"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@eslint/babel-parser",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "jest/no-deprecated-functions": "off"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabwidth": true,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
